<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/titleHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Symptom History (Last 6 Months)"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:textColor="#000" />

    <!-- Selected Child -->
    <TextView
        android:id="@+id/tvChildName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child: Loading..."
        android:textSize="18sp"
        android:paddingBottom="8dp"
        android:textColor="#333" />

    <!-- Date Range Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Date Range"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="6dp" />

    <!-- Date Range Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/btnStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="From" />

        <Button
            android:id="@+id/btnEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To" />
    </LinearLayout>

    <!-- Symptom Filter -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by Symptom"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerSymptomFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />

    <!-- Trigger Filter -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by Trigger"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerTriggerFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />

    <!-- RecyclerView for history entries -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="12dp" />

    <!-- Export buttons -->
    <Button
        android:id="@+id/btnExportPDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export PDF for Provider"
        android:textStyle="bold"
        android:background="#2196F3"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnExportCSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export as CSV"
        android:textStyle="bold"
        android:background="#4CAF50"
        android:textColor="@android:color/white"
        android:padding="10dp" />

</LinearLayout>
