<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/h_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2025-01-01"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/h_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Night: None | Activity: None | Cough: Mild | Chest: None"
        android:textSize="14sp"
        android:paddingTop="2dp" />

    <TextView
        android:id="@+id/h_triggers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Triggers: Exercise, Cold Air"
        android:textSize="13sp"
        android:paddingTop="2dp" />

    <TextView
        android:id="@+id/h_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submitted by: parent"
        android:textSize="13sp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/h_shared_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared with Provider"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:background="#1F4CAF50"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone"/>

</LinearLayout>
