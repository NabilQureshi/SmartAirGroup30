<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartAir">

        <!-- LOGIN (Launcher) -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.child.ChildPEFActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.child.ChildTriageActivity"
            android:exported="false"
            android:parentActivityName=".ui.child.ChildPEFActivity" />

        <activity
            android:name=".ui.parent.ParentHomeActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- REGISTER -->
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false" />

        <!-- HOMEPAGE -->
        <activity
            android:name=".HomepageActivity"
            android:exported="true" />

        <!-- CHILD MANAGEMENT -->
        <activity android:name=".ViewChildrenActivity" android:exported="true" />
        <activity android:name=".AddChildActivity" android:exported="true" />
        <activity android:name=".ManageChildActivity" android:exported="true" />

        <!-- SHARING MANAGEMENT -->
        <activity android:name=".ManageSharingActivity" android:exported="false" />
        <activity android:name=".ChooseChildForSharingActivity" android:exported="true" />

        <!-- OTHER SCREENS -->
        <activity android:name=".LogMedicineActivity" android:exported="false" />
        <activity android:name=".TechniqueActivity" android:exported="false" />
        <activity android:name=".PrePostCheckActivity" android:exported="false" />

        <!-- OPTIONAL: remove if not used anymore -->
        <activity android:name=".MainActivity" android:exported="false" />

        <activity android:name=".BadgeActivity" />

    </application>

</manifest>